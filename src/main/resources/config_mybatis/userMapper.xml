<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="stream.mokulive.storage.mapper.UserMapper">


    <select id="findById" resultType="stream.mokulive.storage.vo.Auth0User">
        SELECT * FROM storage_user WHERE userId = #{userId}
    </select>

    <select id="addUser" parameterType="stream.mokulive.storage.vo.Auth0User">
        insert into storage_user values (#{userId},#{nick},#{avatar},#{email})
    </select>

</mapper>